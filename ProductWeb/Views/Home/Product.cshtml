@{
    ViewData["Title"] = "Product";
}

<div class="container">
    <div class="text-center pt-5">
        <h1 class="display-4 titleA"> <span>เปลี่ยนลุคใหม่</span> <br> <span>แต่คุ้นเคยไม่เปลี่ยน</span></h1>
    </div>

    <div class="text-center pt-3">
