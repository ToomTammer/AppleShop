@model IEnumerable<ProductWeb.Models.db.AppleProduct>

@{
    ViewData["Title"] = "Listitem";
}
<div class="container">
    <h1 class=" card-body mb-3" style="text-align: center;">รายการสินค้าทั้งหมด</h1>
    <div class="mx-auto" style="width: 100vw;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ชื่อสินค้า
                    </th>
                    <th>
                        ราคาสินค้า
                    <th>
                        รูปสินค้า
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice) บาท
                        </td>
                        <td>
                            <img style="max-width:100px; max-height:100px;" src="data:image/*;base64,@(Convert.ToBase64String(item.ProductImage))">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>